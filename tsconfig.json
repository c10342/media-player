{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": ".",
    "moduleResolution": "node",
    "paths": {
      "@lin-media/*": [
        "packages/*"
      ]
    },
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "declaration": true,
    "declarationDir": "temp_types",
    "downlevelIteration":true
  },
  "exclude": [
    "node_modules",
    "temp_types"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.json"
  ]
}